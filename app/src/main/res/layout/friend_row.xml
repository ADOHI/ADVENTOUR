<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/io">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorBackgroundFloating">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_friend_sumnail"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"

                android:layout_margin="10dp"
                app:srcCompat="@drawable/backpack_m" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="5dp">

                <TextView
                    android:text="name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/tv_friend_name"
                    android:layout_weight="1"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="50dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/trophy"
                        android:id="@+id/imageView8"
                        android:layout_weight="1" />

                    <TextView
                        android:text="score"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_trophy_score"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/flag_small"
                        android:id="@+id/imageView9"
                        android:layout_weight="1" />

                    <TextView
                        android:text="flag"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_flag_score"
                        android:layout_weight="1" />

                </LinearLayout>

                <TextView
                    android:text="last"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/tv_friend_lately"
                    android:layout_weight="1"
                    android:singleLine="true"/>
            </LinearLayout>

            <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_friend_memo"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:lines="4"/>


        </LinearLayout>
    </LinearLayout>

</FrameLayout>