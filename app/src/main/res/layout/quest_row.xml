<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="80dp">

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/resume_small"
        android:id="@+id/iv_quest_list_from"
        android:layout_weight="1"
        android:padding="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="10dp">

        <TextView
            android:text="From : aaa"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/tv_quest_list_from"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <TextView
            android:text="this is my hint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/tv_quest_list_hint"
            android:singleLine="true"
            android:layout_weight="1"/>

        <TextView
            android:text="where"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/tv_quest_list_location"
            android:layout_weight="1"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:text="보상"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/textView6"
            android:gravity="end"
            android:layout_weight="1"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/iv_quest_list_reward"
        android:layout_weight="1"
        android:padding="5dp"/>

</LinearLayout>