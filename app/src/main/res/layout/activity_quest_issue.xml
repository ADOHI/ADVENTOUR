<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quest_issue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.adostudio.adohi.adventour.QuestIssueActivity"
    android:background="@drawable/scroll"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <TextView
            android:text="임무"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="40sp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="30dp">

            <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:src="@drawable/tw2"
                android:id="@+id/iv_quest_sticker"
                android:layout_weight="1"
                android:paddingRight="20dp"

                />

            <TextView
                android:text="보상"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="20dp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:text="FROM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:gravity="center"/>

            <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/resume_main"
                android:id="@+id/iv_issue_from_sumnail"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_issue_from_name"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:text="To"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:gravity="center"
              />

            <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/resume_main"
                android:id="@+id/iv_issue_to_sumnail"
                android:layout_gravity="center"
                />

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_issue_to_name"
                android:gravity="center"
                 />

        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/treasure_map"
            android:id="@+id/iv_issue_location"
            android:layout_weight="2" />

        <TextView
            android:text="위치를 정해주세요"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_issue_location"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="퀘스트 내용"
        android:ems="10"
        android:id="@+id/et_issue_hint"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="90dp"
        android:lines="2"/>

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_width="2dp"
        app:civ_border_color="#FFC73232"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/stamp"
        android:id="@+id/iv_issue_stamp"
        android:paddingLeft="160dp"/>
</LinearLayout>
